<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">

    <persistence-unit name="spotitube">
        <jta-data-source>dea</jta-data-source>

        <class>nl.fabianwennink.dea.database.entities.User</class>
        <class>nl.fabianwennink.dea.database.entities.Track</class>
        <class>nl.fabianwennink.dea.database.entities.Playlist</class>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/dea" />
            <property name="javax.persistence.jdbc.user" value="root" />
            <property name="javax.persistence.jdbc.password" value="testPass" />
        </properties>
    </persistence-unit>
</persistence>